	help
	  MIPI DSI LCD Panel used by Lab126 bowser

config PANEL_NT51012_LG
	tristate "NT51012 LG 800x1280 DSI LCD Panel"
	depends on OMAP2_DSS_DSI
	select BACKLIGHT_CLASS_DEVICE
	help
	  MIPI DSI LCD Panel used by Lab126

config PANEL_LP_101
        tristate "LP101 LCD Panel"
        depends on OMAP2_DSS_DPI
        help
          LCD Panel used in TI's OMAP5 uevm board attachable on LCD2 interface
